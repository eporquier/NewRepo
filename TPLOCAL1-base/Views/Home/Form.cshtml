
@model TPLOCAL1.Models.FormModel
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using Microsoft.AspNetCore.Mvc.Rendering


<html>

<head>
    <link rel="stylesheet" href="~/resources/index.css" />
    <link rel="stylesheet" href="~/resources/Form.css" />

    <title>HN - FORMULAIRE</title>
</head>


<body>
    <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
    <header>
        <h1>Page de formulaire</h1>
    </header>
    <br />
    <nav>
        <ul>
            <li><a href="/Home/Index/Index">Accueil</a></li>
            <li><a href="/Home/Index/Avis">Liste des avis</a></li>
        </ul>
    </nav>


    <section>
    <form asp-action="ValidationFormulaire" method="post">

    <table>
        <tr>
            <th colspan="2" align="center">Informations personnelles</th>
        </tr>
        <tbody>
            <tr>
                <td>Nom</td>
                
                <td><input type="text" asp-for="Name" id="name" size="32" placeholder="Entrez votre nom"  />
                            <span asp-validation-for="Name"></span>
                </td>
            </tr>
            
            <tr>
                <td>Prénom</td>
                <td>
                    <input type="text" asp-for="Forname" id="forname"  size="32" placeholder="Entrez votre prénom" />
                            <span asp-validation-for="Forname"></span>
                </td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>
                        <select asp-for="Gender" name="Gender" id="gender">
                            <option value="">Selectionner un genre</option>
                            <option value="Man">Homme</option>
                            <option value="Woman">Femme</option>
                            <option value="Other">Autre</option>
                        </select>
                            <span asp-validation-for="Gender"></span>
                </td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td><input type="text" asp-for="Address" id="address" size="32" placeholder="Entrez votre adresse" />
                            <span asp-validation-for="Address"></span>
                        </td>
            </tr>
            <tr>
                <td>Code postal</td>
                <td><input type="text" asp-for="ZipCode" id="zip code" size="32" placeholder="Entrez votre code postal" />
                            <span asp-validation-for="ZipCode"></span>
                </td>
            </tr>
            <tr>
                <td>Ville</td>
                <td><input type="text" asp-for="Town" id="town" size="32" placeholder="Entrez votre ville" />
                            <span asp-validation-for="Town"></span>
                </td>
            </tr>
            <tr>
                <td>Adresse email</td>
                <td><input type="email" asp-for="Email" id="email"  size="32" placeholder="Entrez votre email" />
                            <span asp-validation-for="Email"></span>
                        </td>
            </tr>
        </tbody>
    </table>
    <br />
        <table>
        <tr>
            <th colspan="2" align="center">Information sur la formation</th>
        </tr>
        <tbody>
            <tr>
                <td>Date de début</td>
                <td><input type="date" asp-for="StartDate" id="date" required placeholder="Date de début" />
                            <span asp-validation-for="StartDate"></span>
                        </td>
            </tr>
            <tr>
                <td>Type of training</td>
                <td>
                        <select name="Formation" asp-for="Formation" id="Formation">
                            <option value="">Selectionner une formation</option>
                            <option value="Cobol">Formation Cobol</option>
                            <option value="Object">Formation C#</option>
                            <option value="Dual">Double formation</option>
                        </select>
                            <span asp-validation-for="Formation"></span>
                </td>
            </tr>
        </tbody>
    </table>
    <br />
        <table>
            <tr>
                <th colspan="2" align="center">Avis sur la formation</th>
            </tr>
            <tbody>
                <tr>
                    <td>Formation Cobol</td>
                    <td><input type="text" asp-for="CobolTraining" id="coboltraining" size="32" />
                            <span asp-validation-for="CobolTraining"></span>
                        </td>
                </tr>
                <tr>
                    <td>Formation C#</td>
                    <td><input type="text" id="purpose" asp-for="CShapTraining"  size="32" />
                            <span asp-validation-for="CShapTraining"></span>
                        </td>
                </tr>
            </tbody>
            

       </table>
    <br />
    <input class="Submit" type="submit" value="Submit" />
    </form>
    </section>
    


</body>

</html>