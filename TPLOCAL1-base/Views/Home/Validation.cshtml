@model TPLOCAL1.Models.FormModel

<html>
<head>
    <link rel="stylesheet" href="~/resources/index.css" />
    <link rel="stylesheet" href="~/resources/validation.css" />
    <title>HN - Validation</title>
</head>

<body>
    <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
    <header>
        <h1>Page de validation</h1>
    </header>
    <br />
    <nav>
        <ul>
            <li><a href="/Home/Index/Index">Accueil</a></li>
            <li><a href="/Home/Index/Avis">Liste des avis</a></li>
        </ul>
    </nav>


    <section>
    <p>Votre formulaire a bien été pris en compte</p>
    <form asp-action="ValidationFormulaire" method="post">
    <table>
        <tr>
            <th colspan="2" align="center">Informations personnelles</th>
        </tr>
        <tbody>
            <tr>
                <td>Nom</td>
                <td>@Model.Name</td>
            </tr>

            <tr>
                <td>Prénom</td>
                <td>@Model.Forname</td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <td>Code postal</td>
                <td>@Model.ZipCode</td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>@Model.Town</td>
            </tr>
            <tr>
                <td>Adresse email</td>
                <td>@Model.Email</td>
            </tr>
        </tbody>
    </table>
    <br />
        <table>
        <tr>
            <th colspan="2" align="center">Informations formation suivie</th>
        </tr>
        <tbody>
            <tr>
                <td>Date de début</td>
                <td>@Model.StartDate.ToShortDateString()</td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>@Model.Formation</td>
            </tr>
        </tbody>
    </table>
    <br />
        <table>
            <tr>
                <th colspan="2" align="center">Avis sur la formation</th>
            </tr>
            <tbody>
                <tr>
                    <td>Formation Cobol</td>
                    <td>@Model.CobolTraining</td>
                </tr>
                <tr>
                    <td>Formation C#</td>
                    <td>@Model.CShapTraining</td>
                </tr>
            </tbody>
        </table>
    <br />
    </form>
    </section>

</body>
</html>